{% extends "pagelayout.njk" %}


{% block content %}
  <div class="row">
    <div class="col s5">
      <h2>{{ recipe.name }}</h2>
      <p>{{ recipe.description }}</p>
      <p>Preparation time : {{ recipe.preparationTime }}</p>
      {% if recipe.cookingTime %}
        <p>Cooking time : {{ recipe.cookingTime }}</p>
      {% endif %}
    </div>
    <div class="col s7">
      <img class="responsive-img" src="{{ recipe.image }}">
    </div>
  </div>

  <div class="col s12">
    <h3>Ingedients</h3>
    <ul class="collection">
      {% for ingredient in recipe.ingredients %}
        <li class="collection-item">{{ ingredient }}</li>
      {% endfor %}
    </ul>
  </div>

  <div class="col s12">
    <h3>Steps</h3>
    <ul class="collection">
      {% for step in recipe.steps %}
        <li class="collection-item">{{ step }}</li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}